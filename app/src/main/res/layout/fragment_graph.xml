<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="0dp"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTwo">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inventoryRecyclerView"
        android:elevation="-10dp"
        android:layout_margin="0dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTwo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="24dp">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Recurring Reminder Data"
            android:textColor="@color/colorPrimary"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="6dp">


            <com.github.mikephil.charting.charts.ScatterChart
                android:id="@+id/graph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"/>


        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_background_color_primary">
        <Spinner
            android:id="@+id/graphSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorPrimary"
                android:text="Time Scheduled: "/>

            <TextView
                android:id="@+id/scheduledTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorPrimary"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorPrimary"
                android:text="Time Taken: "/>

            <TextView
                android:id="@+id/takenTimeTV"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorPrimary"
                android:text="-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorPrimary"
                android:text="Minutes Late: "/>

            <TextView
                android:id="@+id/minutesLateTV"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:textColor="@color/colorPrimary"
                android:text="-"/>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>