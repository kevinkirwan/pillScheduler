<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTwo"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="5dp"
    app:cardBackgroundColor="@color/colorThree"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@color/colorThree"
        android:orientation="horizontal"
        android:padding="0dp">



        <LinearLayout
            android:id="@+id/iconLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iconIV"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:padding="2dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_capsule" />

            <TextView
                android:id="@+id/typeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="xxxx"/>




        </LinearLayout>




        <LinearLayout
            android:id="@+id/nameDescInfo"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iconLL"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reminderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="Name name name"
                android:maxLines="1"
                android:textColor="@color/colorOneText"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reminderDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="Des crip tio n de scri ptio n de sc ripti on"
                android:textColor="@color/colorTwoText"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/miscInfoLL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="0dp"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/nameDescInfo"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reminderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="8:27 PM"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorOneText"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/reminderDataLineTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:text="July 14 2021"
                android:gravity="center"
                android:textColor="@color/colorTwoText"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/scheduleItemMenuLL"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="3">

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:tint="@color/colorThree"
                app:srcCompat="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:tint="@color/colorThree"
                app:srcCompat="@drawable/trash_can_2" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/activationCheckBox"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:buttonTint="@color/colorThree"
                android:layout_weight="1"
                android:textSize="10sp"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorThree"
                android:text="Inactive"
                />


            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_marginVertical="10dp"
                android:layout_weight="1">
            </LinearLayout>
            -->






        </LinearLayout>



<!--
        <View
            android:id="@+id/card_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="0dp"
            android:background="@color/colorThree" />
            -->

    </RelativeLayout>


</androidx.cardview.widget.CardView>