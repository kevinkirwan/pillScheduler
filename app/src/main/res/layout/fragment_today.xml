<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <View
        android:id="@+id/card_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentTop="true"
        android:layout_marginHorizontal="0dp"
        android:background="@color/colorSecondary" />

    <View
        android:id="@+id/secondDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/topLinearLayout"
        android:background="@color/colorSecondary" />

    <View
        android:id="@+id/thirdDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/weatherLinearLayout"
        android:background="@color/colorSecondary" />

    <View
        android:id="@+id/fourthDivider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/newsLinearLayout"
        android:background="@color/colorSecondary" />



    <LinearLayout
        android:id="@+id/topLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/card_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextClock
                android:id="@+id/currentTimeDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="HH:MM"
                android:gravity="end"
                android:textColor="#FFFFFF"
                android:textSize="48dp" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:layout_marginLeft="8dp"
                android:text="DD Mmm"
                android:textColor="@color/colorSecondary"
                android:textSize="24dp" />



        </LinearLayout>


        <TextView
            android:id="@+id/timeZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="12dp"
            android:text="City - Time Zone"
            android:textColor="@color/colorSecondary"
            android:textSize="14dp">

        </TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/weatherLinearLayout"
        android:layout_below="@+id/secondDivider"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/weatherIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:tint="@color/white"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:layout_gravity="center"
            app:srcCompat="@drawable/moon"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:gravity="start">
            <TextView
                android:id="@+id/currentWeatherSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunny"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="center_vertical"
                android:text="48 degrees"
                android:textColor="@color/colorSecondary"
                android:textSize="24dp" />



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/newsLinearLayout"
        android:layout_below="@+id/thirdDivider"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/newsIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:tint="@color/white"
            android:layout_marginStart="8dp"
            android:gravity="top"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_rain_unlicensed"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:gravity="start">
            <TextView
                android:id="@+id/newsHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="Sunny"
                android:gravity="start"
                android:layout_gravity="start"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/newsContent"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:maxLines="4"
                android:gravity="start"
                android:layout_gravity="start"
                android:text="48 degrees"
                android:textColor="@color/colorSecondary"
                android:textSize="12sp" />



        </LinearLayout>


    </LinearLayout>




