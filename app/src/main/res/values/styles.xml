<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTwo</item>
        <item name="colorSecondary">@color/colorTwo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorAccent</item>
        <item name="android:fontFamily">@font/adamina</item>
    </style>

    <style name="RegalTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#FF0000</item>
        <item name="colorSecondary">#550000</item>
        <item name="colorAccent">#000055</item>
        <item name="colorError">#005500</item>
        <item name="android:fontFamily">@font/adamina</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorTwo</item>
        <item name="colorSecondary">@color/colorTwo</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/adamina</item>
    </style>

    <style name="ForestTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#005500</item>
        <item name="colorSecondary">#FF0000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/adamina</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:tint">@color/colorTwo</item>
        <item name="android:colorActivatedHighlight">@color/colorFour</item>

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gray</item>
        <item name="android:background">@color/colorTwo</item>

    </style>

    <style name="DatePicker">
        <item name="colorAccent">@color/colorTwo</item>
        <item name="colorPrimary">@color/colorTwo</item>
        <item name="colorSecondary">@color/colorTwo</item>
        <item name="backgroundTint">@color/colorTwo</item>
        <item name="colorPrimaryDark">@color/colorTwo</item>
        <item name="tint">@color/colorTwo</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/gray</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
